type Article {
    id: ID!
    title: String!
    content: String!
    publishDate: String!
    tags: [Tag!]
}

type Tag {
    id: ID!
    name: String!
}

type Query {
    articles: [Article!]
    article(id: ID!): Article
}

type Mutation {
    createArticle(title: String!, content: String!, publishDate: String!): Article!
    updateArticle(id: ID!, title: String!, content: String!, publishDate: String!): Article!
    deleteArticle(id: ID!): Boolean!
}
